
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div ng-app="DownloadVoucheryApp" ng-controller="VoucherController">
    <div ng-init="GetVouchers()">
        <div ng-repeat="v in vouchers track by v.VoucherId">
            <ul>
                <li>{{v.VoucherId}}</li>
                <li>{{v.VoucherCode}}</li>
                <li>{{v.VoucherFilePath}}</li>
                <li>{{v.VoucherCreationDate}}</li>
                <li>{{v.VoucherRedemptionDate}}</li>
                <li>{{v.VoucherRedeemed}}</li>
            </ul>
        </div>
    </div>
    <form role="form" ng-submit="CreateVoucher()">
        <input type="text" ng-model="newVoucher.VoucherFilePath" />
        <input type="number" ng-model="newVoucher.VoucherAmount" />
        <input type="submit" value="Create Voucher" />
    </form>
</div>

